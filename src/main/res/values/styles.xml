<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonBasic">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:layout_marginLeft">150dp</item>
    </style>
    <style name="sample1">
        <item name="color">#ff00ff</item>
    </style>
    <style name="sample2">
        <item name="android:text">50dp</item>
    </style>
    <style name="sample2.sample1">
        <item name="background">@color/self</item>
    </style>
    <style name="basis">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="warnUser">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/warn</item>
    </style>


</resources>